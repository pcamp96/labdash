# Application
NODE_ENV=production
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Database
# PostgreSQL (recommended for production):
DATABASE_URL="postgresql://labdash:changeme@postgres:5432/labdash"
# SQLite (lightweight alternative):
# DATABASE_URL="file:./data/labdash.db"

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=changeme-generate-with-openssl-rand-base64-32

# Encryption (for API keys in database)
ENCRYPTION_KEY=changeme-generate-with-openssl-rand-hex-32

# Docker
DOCKER_SOCKET_PATH=/var/run/docker.sock

# Grafana
GRAFANA_URL=http://grafana:3000
GRAFANA_ADMIN_USER=admin
GRAFANA_ADMIN_PASSWORD=changeme

# Prometheus
PROMETHEUS_URL=http://prometheus:9090
